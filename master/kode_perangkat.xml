<odoo>
	<data>
		
		<record id="view_master_kode_perangkat_tree" model="ir.ui.view">
			<field name="name">master.kode_perangkat.tree</field>
			<field name="model">master.kode_perangkat</field>
			<field name="type">tree</field>
			<field name="priority" eval="8"/>
			
			<field name="arch" type="xml">
				<tree string="Kode Perangkat">
					<field name="no_perangkat"/>
					<field name="name" />
				</tree>
			</field>
		</record>

		<record id="view_master_kode_perangkat_form" model="ir.ui.view">
			<field name="name">master.kode_perangkat.form</field>
			<field name="model">master.kode_perangkat</field>
			<field name="type">form</field>
			<field name="priority" eval="8"/>

			<field name="arch" type="xml">
				<form string="Kode Perangkat Form" version="7.0">
					<sheet>
						<div class="oe_title">
							<label for="name" class="oe_edit_only" string="Nama Kode Perangkat"/>
							<h1>
								<field name="name"/>
							</h1>
						</div>
						<group>
							<group>
								<field name="no_perangkat"/>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>

	</data>
</odoo>